                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Question 1       :"
                    />
                <EditText
                    android:id="@+id/Q1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="0"
                    />

            </LinearLayout>

