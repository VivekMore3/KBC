<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".product">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUCTS"
        android:textSize="@dimen/view_horizontal_margin"
        android:layout_marginTop="@dimen/view_horizontal_margin"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="@dimen/view_horizontal_margin"/>

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="98dp"
        android:orientation="horizontal"><![CDATA[

        />

        ]]>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:layout_marginBottom="@dimen/view_horizontal_margin"
            android:text="product code:"
            android:textSize="@dimen/view_horizontal_margin" />

        <EditText
            android:id="@+id/product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:layout_marginBottom="@dimen/view_horizontal_margin"
            android:hint="Enter the product code"
            android:textSize="@dimen/view_horizontal_margin" />

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:layout_marginBottom="@dimen/view_horizontal_margin"
            android:text="name             :"
            android:textSize="@dimen/view_horizontal_margin" />

        />

        <EditText
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:layout_marginBottom="@dimen/view_horizontal_margin"
            android:hint="Enter the product name"
            android:textSize="@dimen/view_horizontal_margin" />

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:layout_marginBottom="@dimen/view_horizontal_margin"
            android:text="submit" />
        />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:layout_marginBottom="@dimen/view_horizontal_margin"
            android:text="cancel" />
        />
    </LinearLayout>

</LinearLayout>